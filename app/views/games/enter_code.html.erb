<style>
  @keyframes gradientAnimation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animated-bg {
    position: fixed; /* Fija el fondo en toda la pantalla */
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(270deg, #667eea, #764ba2, #ff758c);
    background-size: 400% 400%;
    animation: gradientAnimation 8s ease infinite;
    z-index: -1; /* Envía el fondo detrás del contenido */
  }
</style>

<!-- Fondo animado -->
<div class="animated-bg"></div>

<!-- Contenido principal -->
<div class="min-h-screen flex flex-col items-center justify-center relative z-10">
  <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-md transform transition duration-500 ease-in-out hover:scale-105">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-4 animate-fade-in">
      <%= t('games.enter_code.title') %>
    </h1>

    <%= form_with url: verify_code_games_path, method: :post, local: true, class: "space-y-4" do |f| %>
      <div class="animate-slide-in">
        <%= f.label :code, t('games.enter_code.label'), class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :code, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex justify-between items-center">
        <%= f.submit t('games.enter_code.submit'), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg w-full transition-transform duration-300 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>

    <div class="mt-4 text-center animate-fade-in">
      <p class="text-sm text-gray-600"><%= t('games.enter_code.or') %></p>
      <%= link_to t('games.enter_code.login'), new_admin_session_path, class: "mt-2 inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
  </div>
</div>


