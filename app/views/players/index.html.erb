<% content_for :title, t('players.index.title') %>

<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-100 text-green-800 rounded-lg shadow">
      <%= notice %>
    </div>
  <% end %>

  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800"><%= t('players.index.heading') %></h1>
  </div>

  <% if @players.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @players.each do |player| %>
        <div class="bg-white rounded-xl shadow p-6 hover:shadow-md transition-shadow duration-300">
          <h2 class="text-xl font-semibold text-gray-800 mb-1">
            <%= player.first_name %> <%= player.last_name %>
          </h2>
          <p class="text-sm text-gray-600"><strong><%= t('players.index.email') %>:</strong> <%= player.email %></p>
          <p class="text-sm text-gray-600"><strong><%= t('players.index.cellphone') %>:</strong> <%= player.cellphone %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 mt-10"><%= t('players.index.empty') %></p>
  <% end %>

  <!-- BotÃ³n para volver -->
  <div class="mt-10 text-center">
    <%= link_to games_path, class: "inline-flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-800 px-5 py-3 rounded-lg text-sm font-medium transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('players.index.back_to_games') %>
    <% end %>
  </div>
</div>


